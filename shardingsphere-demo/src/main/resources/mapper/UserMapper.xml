<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.apache.shardingsphere.shardingspheredemo.repository.UserRepository">

    <resultMap id="userMap" type="org.apache.shardingsphere.shardingspheredemo.entity.User">
        <result property="userId" column="user_id"/>
        <result property="userName" column="user_name"/>
    </resultMap>

    <insert id="addEntity" parameterType="org.apache.shardingsphere.shardingspheredemo.entity.User">
        INSERT INTO `user`(user_id, user_name)
        VALUES (#{userId}, #{userName})
    </insert>

    <select id="findAll" resultMap="userMap">
        SELECT *
        FROM `user`
    </select>

</mapper>